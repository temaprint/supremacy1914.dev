---
import Layout from '../../components/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getLangFromUrl, useTranslations, seoKeywords } from '../../i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const keywords = `${seoKeywords[lang as keyof typeof seoKeywords]}, rules, guidelines, code of honor, fair play`;
---

<Layout
  title={`${t('menu.rules')} - ${t('site.title')}`} lang={lang}
  keywords={keywords}
  schemaType="webpage"
>
  <Header />
  
  <main class="py-16">
    <div class="container mx-auto px-4 max-w-4xl">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 text-military-dark dark:text-military-light">
          Community <span class="text-military-olive dark:text-military-tan">Code of Honor</span>
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed">
          Fair play principles that make our community thrive
        </p>
      </div>
      
      <!-- Rules Content -->
      <div class="space-y-8">
        <!-- What We Support -->
        <div class="bg-green-50 dark:bg-green-900/20 rounded-2xl p-8 border border-green-200 dark:border-green-700">
          <h2 class="text-2xl font-bold text-green-800 dark:text-green-400 mb-6 flex items-center">
            <span class="text-3xl mr-3">✅</span>
            What We Celebrate
          </h2>
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <h3 class="font-semibold text-green-700 dark:text-green-300 mb-3">Fair Play</h3>
              <p class="text-green-600 dark:text-green-200">Honest competition and strategic excellence without exploits or cheats.</p>
            </div>
            <div>
              <h3 class="font-semibold text-green-700 dark:text-green-300 mb-3">Diplomatic Honor</h3>
              <p class="text-green-600 dark:text-green-200">Keeping your word when making treaties and alliances.</p>
            </div>
            <div>
              <h3 class="font-semibold text-green-700 dark:text-green-300 mb-3">Strategic Warfare</h3>
              <p class="text-green-600 dark:text-green-200">Brilliant tactics, careful planning, and decisive action.</p>
            </div>
            <div>
              <h3 class="font-semibold text-green-700 dark:text-green-300 mb-3">Community Support</h3>
              <p class="text-green-600 dark:text-green-200">Helping new players learn and grow in the game.</p>
            </div>
          </div>
        </div>
        
        <!-- What We Don't Allow -->
        <div class="bg-red-50 dark:bg-red-900/20 rounded-2xl p-8 border border-red-200 dark:border-red-700">
          <h2 class="text-2xl font-bold text-red-800 dark:text-red-400 mb-6 flex items-center">
            <span class="text-3xl mr-3">❌</span>
            Prohibited Behavior
          </h2>
          <div class="space-y-4">
            <div class="bg-white dark:bg-red-900/30 p-4 rounded-lg">
              <h3 class="font-semibold text-red-700 dark:text-red-300 mb-2">Multi-Accounting</h3>
              <p class="text-red-600 dark:text-red-200">Using multiple accounts to gain unfair advantages is strictly forbidden.</p>
            </div>
            <div class="bg-white dark:bg-red-900/30 p-4 rounded-lg">
              <h3 class="font-semibold text-red-700 dark:text-red-300 mb-2">Bot Usage</h3>
              <p class="text-red-600 dark:text-red-200">Automated scripts or bots that play the game for you are not allowed.</p>
            </div>
            <div class="bg-white dark:bg-red-900/30 p-4 rounded-lg">
              <h3 class="font-semibold text-red-700 dark:text-red-300 mb-2">Treaty Breaking</h3>
              <p class="text-red-600 dark:text-red-200">Consistently breaking treaties without strategic justification damages community trust.</p>
            </div>
            <div class="bg-white dark:bg-red-900/30 p-4 rounded-lg">
              <h3 class="font-semibold text-red-700 dark:text-red-300 mb-2">Toxic Behavior</h3>
              <p class="text-red-600 dark:text-red-200">Harassment, abuse, or unsporting conduct toward other players.</p>
            </div>
          </div>
        </div>
        
        <!-- Enforcement -->
        <div class="bg-military-olive/10 dark:bg-military-tan/10 rounded-2xl p-8 border border-military-tan/30">
          <h2 class="text-2xl font-bold text-military-olive dark:text-military-tan mb-4">Enforcement & Reporting</h2>
          <p class="text-gray-700 dark:text-gray-300 mb-6">
            Our community moderators review all reports and take appropriate action. 
            Violations may result in warnings, temporary suspensions, or permanent bans from community resources.
          </p>
          <div class="text-center">
            <a href="/de/report" class="inline-flex items-center px-8 py-4 bg-military-olive hover:bg-military-brass text-white font-semibold rounded-xl transition-all duration-300 transform hover:scale-105">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
              </svg>
              Report a Violation
            </a>
          </div>
        </div>
        
        <!-- Philosophy -->
        <div class="bg-white dark:bg-military-dark/80 rounded-2xl shadow-lg p-8 border border-military-tan/20 text-center">
          <h2 class="text-2xl font-bold text-military-olive dark:text-military-tan mb-4">Our Philosophy</h2>
          <p class="text-lg text-gray-600 dark:text-gray-300 italic leading-relaxed">
            "In the game of war, honor is the ultimate victory. A general who wins through deception may conquer territories, 
            but a general who wins with integrity conquers hearts and minds forever."
          </p>
        </div>
      </div>
    </div>
  </main>
  
  <Footer />
</Layout>
